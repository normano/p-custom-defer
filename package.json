		"build": "rm -fr dist && tsc"
	},
	"keywords": [
		"promise",
		"defer",
		"deferred",
		"resolve",
		"reject",
		"lazy",
		"later",
		"async",
		"await",
		"promises"
	],
	"devDependencies": {
		"ava": "^3.9.0",
		"ts-node": "^8.10.2",
		"tsd": "^0.11.0",
		"typescript": "^3.9",
		"xo": "^0.32.0"
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"failFast": true,
		"tap": true,
		"powerAssert": false,
		"files": [
			"test/**/*",
			"!test/src/**"
		],
		"require": [
			"ts-node/register"
		]
	}
